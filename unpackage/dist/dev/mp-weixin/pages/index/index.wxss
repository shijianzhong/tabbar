.main-content {
  height: 100vh;
  background: #222327;
}
.main-content .tabbar {
  display: flex;
  height: 50px;
  background-color: white;
  border-radius: 10px;
  position: absolute;
  bottom: 0px;
  left: 0px;
  right: 0px;
  justify-content: space-around;
}
.main-content .tabbar .tabbar-item {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
  z-index: 1;
}
.main-content .tabbar .tabbar-item .icon {
  font-size: 20px;
  text-align: center;
  transition: 0.5s;
  -webkit-transform: translateY(10px);
          transform: translateY(10px);
}
.main-content .tabbar .tabbar-item .text {
  text-align: center;
  transition: 0.5s;
  opacity: 0;
}
.main-content .tabbar .tabbar-item.active .text {
  -webkit-transform: translateY(1px);
          transform: translateY(1px);
  opacity: 1;
}
.main-content .tabbar .tabbar-item.active .icon {
  -webkit-transform: translateY(-13px);
          transform: translateY(-13px);
}
.main-content .tabbar .indicator {
  position: absolute;
  top: -30px;
  border-radius: 50%;
  border: 6px solid #222327;
  width: 50px;
  height: 50px;
  background: #29fd53;
  transition: 0.5s;
}
.main-content .tabbar .indicator::before {
  content: '';
  position: absolute;
  top: 41%;
  left: -23px;
  width: 20px;
  height: 20px;
  background: transparent;
  border-top-right-radius: 20px;
  box-shadow: 0px -10px 0 0 #222327;
}
.main-content .tabbar .indicator::after {
  content: '';
  position: absolute;
  top: 41%;
  right: -23px;
  width: 20px;
  height: 20px;
  background: transparent;
  border-top-left-radius: 20px;
  box-shadow: 0px -10px 0 0 #222327;
}

